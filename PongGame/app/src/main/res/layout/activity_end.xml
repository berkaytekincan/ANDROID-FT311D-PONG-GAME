<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.ponggame.end"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GAME OVER"
        android:id="@+id/gameover"
        android:textSize="50dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Emre Atik"
        android:id="@+id/emrea"
        android:textColor="#ff000000"
        android:layout_above="@+id/ozgun"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Özgün Dedeoğlu"
        android:id="@+id/ozgun"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Berkay Tekincan"
        android:id="@+id/berkay"
        android:textColor="#ff000000"
        android:layout_below="@+id/ozgun"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Emre Mercan"
        android:id="@+id/emreme"
        android:textColor="#ff000000"
        android:layout_below="@+id/basak"
        android:layout_alignLeft="@+id/basak"
        android:layout_alignStart="@+id/basak"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Başak Çelik"
        android:id="@+id/basak"
        android:textColor="#ff000000"
        android:layout_below="@+id/berkay"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />
</RelativeLayout>
